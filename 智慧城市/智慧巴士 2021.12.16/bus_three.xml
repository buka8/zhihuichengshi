<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".bus_three">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="25sp">

        <TextView
            android:id="@+id/bus_three_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="text"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="————>"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/bus_three_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="text"
            android:textSize="25sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓        名:"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/bus_three_etxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入姓名" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号码:"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/bus_three_etxt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入手机号码" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上车地点:"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/bus_three_etxt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入上车地点" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下车地点:"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/bus_three_etxt4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入下车地点" />
        </LinearLayout>
        <TextView
            android:id="@+id/bus_three_txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击此处查询站点"
            android:background="@color/gray"
            android:layout_gravity="right"/>
    </LinearLayout>


    <Button
        android:id="@+id/bus_three_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:text="下一步"
        android:textSize="25sp" />

</LinearLayout>