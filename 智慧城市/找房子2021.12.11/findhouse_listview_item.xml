<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="170dp">


    <ImageView
        android:id="@+id/findHouse_item_imageView"
        android:layout_width="131dp"
        android:layout_height="95dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/abc" />

    <TextView
        android:id="@+id/findHouse_item_textView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="TextView" />


    <TextView
        android:id="@+id/findHouse_item_textView2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="30dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/findHouse_item_textView3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="30dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/findHouse_item_textView4"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="95dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_marginEnd="30dp"
        android:text="TextView" />

</RelativeLayout>